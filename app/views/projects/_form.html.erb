<%= form_for @project, :html => { :class => "text-center" } do |f| %>
  <% if @project.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field control-group">
    <%= f.label :title, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :title, :autofocus => true %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :description, :class => "control-label" %>
    <div class="controls">
      <%= f.text_area :description, :rows => 3 %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :customer_id, :class => "control-label" %>
    <div class="controls">
      <%= collection_select(:project, :customer_id, Customer.all, :id, :title, prompt: true) %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :status, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :status %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :completed, :class => "control-label" %>
    <div class="controls">
      <%= f.check_box :completed %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :start_date, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :start_date %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :due_date, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :due_date %>
    </div>
  </div>
  <div class="field control-group">
    <%= f.label :completed_date, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :completed_date %>
    </div>
  </div>
  <div class="actions text-center">
    <%= f.submit %>
  </div>
<% end %>
