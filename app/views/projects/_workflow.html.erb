<% if project.status.in?(['waiting on customer','on hold','new']) %>
  <button class="btn btn-<%= status_color("in progress") %> btn-workflow"
    data-url="<%= project_url(project) %>"
    data-status="in progress">start</button>
<% elsif project.status.in?(['in progress']) %>
  <button class="btn btn-<%= status_color("complete") %> btn-workflow"
    data-url="<%= project_url(project) %>"
    data-status="complete">complete</button>
<% elsif project.status.in?(['complete']) %>
  <button class="btn btn-<%= status_color("delivered") %> btn-workflow"
    data-url="<%= project_url(project) %>"
    data-status="delivered">deliver</button>
<% elsif project.status.in?(['delivered']) %>
  <span class="btn-group" style="margin: 0;">
    <button class="btn btn-<%= status_color("accepted") %> btn-workflow"
      data-url="<%= project_url(project) %>"
      data-status="accepted">accept</button>
    <button class="btn btn-danger btn-workflow"
      data-url="<%= project_url(project) %>"
      data-status="new">decline</button>
  </span>
<% elsif project.status.in?(['accepted']) %>
<% else %>
  <span class="dropdown">
    <span class="dropdown-toggle" id="project-<%= project.id%>-status" data-toggle="dropdown">
      <%= project.status %>
      <b class="caret"></b>
    </span>
    <ul class="dropdown-menu project-status" role="menu" aria-labelledby="project-<%= project.id%>-status">
      <% for status in status_options() %>
        <li role="presentation">
          <%= link_to status, "#", data: { url: project_url(project),
                                           status: status
                                         }, "role" => "menuitem" %>
        </li>
      <% end %>
    </ul>
  </span>
<% end %>
