<% if project.customer_id %>
  <% customer = Customer.find(project.customer_id) %>
<% end %>
<div class="panel panel-<%=status_color(project.status)%>">
  <div class="panel-heading clickable">
    <div class="panel-title"><%= project.title %> - 
      <%= render partial: 'projects/status', locals: {project: project} %>
    </div>
    
    <span class="pull-right">
      <i class="glyphicon glyphicon-minus"></i>
    </span>
  </div>
  <div class="panel-body">
    <div class="btn-toolbar" role="toolbar">
      <div class="btn-group">
        <%= link_to "edit", edit_project_path(project), class: "btn btn-default", :remote => true %>
        <%= link_to "delete", project_path(project), method: "delete", class: "btn btn-default", data: { confirm: 'Are you sure?' } %>
      </div>
    </div> <!-- toolbar -->
  </div> <!-- panel-body -->
</div> <!-- panel -->
