<% if project.customer_id %>
  <% customer = Customer.find(project.customer_id) %>
<% end %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-1">
      <h5><div class="label label-default"><%= project.status %></div></h5>
    </div>
    <div class="col-md-4">
      <h4>
        <%= link_to project.title, project %>
        <small>
          <% if customer %>
            <%= customer.title %>
          <% end %>
        </small>
      </h4>
    </div>
    <div class="col-md-4">
      <h5></h5>
    </div>
    <div class="col-md-2">
      <div class="btn-group">
        <%= link_to_modal "Edit", edit_project_path(project),
                                  :class => "btn btn-default" %>
        <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li>
            <%= link_to_modal "Edit", edit_project_path(project) %>
          </li>
          <li>
          <%= link_to "Delete", project_path(project),
                method: "delete", class: "",
                data: { confirm: 'Are you sure?' } %>
          </li>
        </ul>
      </div> <!-- btn-group -->
    </div>
  </div>
</div>
