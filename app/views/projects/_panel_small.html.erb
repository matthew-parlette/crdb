<% if project.customer_id %>
  <% customer = Customer.find(project.customer_id) %>
<% end %>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="col-md-1">
      <h5><div class="label label-default"><%= project.status %></div></h5>
    </div>
    <div class="col-md-4">
      <h5>
        <%= link_to project.title, project %>
      </h5>
    </div>
    <div class="col-md-4">
      <h5><% if customer %><%= link_to customer.title,customer_path(customer) %><% end %></h5>
    </div>
    <div class="btn-group col-md-2">
      <%= link_to_modal "Edit", edit_project_path(project),
                                :class => "btn btn-default dropdown-toggle" %>
      <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to_modal "Edit", edit_project_path(project) %>
        </li>
        <li>
        <%= link_to "Delete", project_path(project),
              method: "delete", class: "",
              data: { confirm: 'Are you sure?' } %>
        </li>
      </ul>
    </div> <!-- btn-group -->
  </div>
</div>
