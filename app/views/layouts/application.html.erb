<!DOCTYPE html>
<html>
<head>
  <title>crdb</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% @customers = Customer.all %>
  <% @projects = Project.where(:completed => false)  %>

  <!-- Header navbar -->
  <div class="navbar navbar-default navbar-static-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="<%= url_for root_path %>">crdb</a>
        </div>
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="<%= url_for root_path %>"><i class="icon-home icon-black"></i> Home</a></li>
            <!-- customers dropdown -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Customers<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "All Customers", customers_path %></li>
                <% @customers.each do |c| %>
                  <li><%= link_to c.title, customer_path(c) %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to_modal "New Customer", new_customer_path, :remote => true %></li>
              </ul>
            </li>
            <!-- end customers dropdown -->
            <!-- projects dropdown -->
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Projects<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <li><%= link_to "All Projects", projects_path %></li>
                <% @projects.each do |p| %>
                  <li><%= link_to p.title, project_path(p) %></li>
                <% end %>
              </ul>
            </li>
            <!-- end projects dropdown -->
          </ul>
          <ul class="nav navbar-nav pull-right">
            <!--<li><a href='/logout'>Logout</a></li>-->
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  <!-- End Header navbar -->

  <% if notice %>
    <div id="notice" class="notice alert alert-info"><%= notice %></div>
  <% end %>
  <% if alert %>
    <div id="alert" class="alert alert-danger"><%= alert %></div>
  <% end %>

  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
